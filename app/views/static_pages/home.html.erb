<% if signed_in? %>
	<%= render 'calendar' %>
	<%= render 'shared/group_header' %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8 microposts-feed">

			<h3>Group Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1><%= image_tag('logo.png', width: "50%", heigth: "50%") %></h1>

		<h2>
			Patient tracker is the easiest way to keep in touch with your loved ones who are in the hospital right now.
		</h2>
		<%=  link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>	
<% end %>